<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="viewModel"
			type="com.example.grabapplication.viewmodel.MainViewModel" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:clickable="true"
		android:focusable="true"
		android:padding="20dp">


		<TextView
			android:id="@+id/description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/driver_going"
			android:textColor="@color/color_black"
			android:textSize="@dimen/text_size_description"
			android:textStyle="bold"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginBottom="20dp"/>

		<LinearLayout
			android:id="@+id/layout_info_driver"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="30dp"
			app:layout_constraintTop_toBottomOf="@+id/description">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/layout_name_driver"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="start">

				<TextView
					android:id="@+id/name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@{viewModel.driverInfoSelect.name}"
					android:textColor="@color/color_black"
					android:textSize="@dimen/text_size_name"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					tools:text="Tran Van Nam" />

				<ImageView
					android:id="@+id/dot"
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:layout_gravity="center"
					android:layout_marginStart="@dimen/margin_start_with_info"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toEndOf="@id/name"
					android:src="@drawable/black_circle" />

				<TextView
					android:id="@+id/rate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_start_with_info"
					android:text="@{Double.toString(viewModel.driverInfoSelect.rate)}"
					android:textColor="@color/color_black"
					android:textSize="@dimen/text_size_name"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toEndOf="@id/dot"
					tools:text="5.0" />

				<ImageView
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_gravity="center"
					android:layout_marginStart="@dimen/margin_start_with_info"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toEndOf="@id/rate"
					android:src="@drawable/star" />

				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_gravity="center"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					android:src="@drawable/phone_call"/>
			</androidx.constraintlayout.widget.ConstraintLayout>

			<LinearLayout
				android:id="@+id/layout_info_vehicle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="10dp"
				android:gravity="start"
				android:orientation="horizontal" >

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@{viewModel.driverInfoSelect.typeVehicle}"
					android:textColor="@color/color_child_info_driver"
					android:textSize="@dimen/text_size_info"
					tools:text="Honda Wave" />

				<ImageView
					android:layout_width="5dp"
					android:layout_height="5dp"
					android:layout_gravity="center"
					android:layout_marginStart="@dimen/margin_start_with_info"
					android:src="@drawable/black_circle" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_start_with_info"
					android:text="@{viewModel.driverInfoSelect.licensePlateNumber}"
					android:textColor="@color/color_child_info_driver"
					android:textSize="@dimen/text_size_info"
					tools:text="29G1-075.80" />

				<ImageView
					android:layout_width="5dp"
					android:layout_height="5dp"
					android:layout_gravity="center"
					android:layout_marginStart="@dimen/margin_start_with_info"
					android:src="@drawable/black_circle" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_start_with_info"
					android:text="@{viewModel.driverInfoSelect.typeDriver}"
					android:textColor="@color/color_child_info_driver"
					android:textSize="@dimen/text_size_info"
					tools:text="GrabBike" />
			</LinearLayout>
		</LinearLayout>

		<Button
			android:id="@+id/btnCancel"
			style="@style/Widget.Button.Simple"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:background="@drawable/button_style"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:text="@string/cancel_book"
			app:layout_constraintTop_toBottomOf="@id/layout_info_driver"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
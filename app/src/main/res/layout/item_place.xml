<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:apps="http://schemas.android.com/tools">

    <data>

        <variable
            name="placeModel"
            type="com.example.grabapplication.googlemaps.models.PlaceModel" />
    </data>

    <LinearLayout
        android:id="@+id/layoutPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@{placeModel.name}"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            apps:text="182 Lương Thế Vinh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{placeModel.formattedAddress}"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                apps:text="182 Lương Thế Vinh, Thanh Xuân Bắc, Thanh Xuân, Hà Nội, Việt Nam" />
        </LinearLayout>

        <View
            android:id="@+id/line_end_tab_diagnostics"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line_end_item_place"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/label_diagnostics" />

    </LinearLayout>

</layout>